{% extends "base.html.twig" %}


{% trans_default_domain 'FOSUserBundle' %}
{% trans_default_domain 'RingCoinAppBundle' %}

{% block style %}
    <link href="{{ asset('bundles/ringcoinapp/css/styleerror.css') }}" rel="stylesheet" type="text/css" media="all">

    <style>
        body{
            height: 100%;
        }
    </style>
{% endblock %}

{% block title %}check-email{% endblock %}

{% block contactUs %}{% endblock %}


{% block body %}
    <div class="header mt-4">
        <img src="{{ asset('bundles/ringcoinapp/img/ringcoin.png') }}" style="height: 12rem;"/>
    </div>

    <div class="w3-main">
        <div class="agile-info">
            <h4 class="white-text mb-4 pl-lg-5 pl-sm-4 pr-sm-4 pr-lg-5">
                {% block content %}
                    {{ 'check-emailValidation.msg'|trans({'%email%': email}) }}
                {% endblock %}
            </h4>
            {% block link %}
                <a href="{{ path('fos_user_profile_show') }}">Backoffice <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
            {% endblock %}
        </div>
    </div>

    <div class="footer-w3l">
        <p>&copy; 2017 Ringcoin.  {{ 'footer'|trans({}, 'RingCoinAppBundle') }} Team Programer</p>
    </div>
{% endblock %}
