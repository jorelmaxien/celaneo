
{% trans_default_domain 'FOSUserBundle' %}


<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="md-form">
        <i class="fa fa-user prefix"></i>
        <label for="Form-email1">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="Form-email1" name="_username" value="{{ last_username }}" required="required" class="form-control">
    </div>

    <div class="md-form pb-1">
        <i class="fa fa-lock prefix"></i>
        <label for="Form-pass1">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="Form-pass1" class="form-control" name="_password" required="required">
        <p class="font-small blue-text d-flex justify-content-end"> <a href="{{ path('fos_user_resetting_request') }}" class="blue-text ml-1">{{ 'loginForm.forgetPassword'|trans({}, 'RingCoinAppBundle') }}</a></p>
    </div>


    <div class="form-group text-center">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me" class="grey-text"><span class="grey-text">{{ 'security.login.remember_me'|trans }}</span></label>
    </div>

    <div class="text-center mb-3">
        <button type="submit" class="btn blue-gradient btn-block btn-rounded z-depth-1a">{{ 'security.login.submit'|trans }}</button>
    </div>

</form>
