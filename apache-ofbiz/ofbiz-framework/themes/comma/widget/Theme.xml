<theme name="comma"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://ofbiz.apache.org/Widget-Theme" xsi:schemaLocation="http://ofbiz.apache.org/Widget-Theme http://ofbiz.apache.org/dtds/widget-theme.xsd">
    <visual-themes>
        <visual-theme id="COMMA" display-name="Company Management Theme">
            <description>${str:label('CommonEntityLabels', 'VisualTheme.description.COMMA', locale)}</description>
            <screenshot location="/comma/screenshot.jpg"/>
        </visual-theme>
    </visual-themes>
    <extends location="component://common-theme/widget/Theme.xml"/>

    <theme-properties>
        <!--javascript lib-->
        <property name="VT_HDR_JAVASCRIPT['add']" value="/comma/dropdown.js"/>
        <!--Css style-->
        <property name="VT_STYLESHEET['add']" value="https://use.fontawesome.com/releases/v5.8.2/css/all.css"/>
        <property name="VT_STYLESHEET['add']" value="/common/css/bootstrap.css"/>
        <property name="VT_STYLESHEET['add']" value="/common/css/mdb.css"/>
        <property name="VT_STYLESHEET['add']" value="/common/js/jquery/ui/jquery-ui-1.12.1.min.css"/>
        <property name="VT_STYLESHEET['add']" value="/common/css/addons/datatables.min.css"/>
        <property name="VT_STYLESHEET['add']" value="/common/css/addons-pro/steppers.min.css"/>

        <property name="VT_STYLESHEET['add']" value="/comma/style.css"/>
        <property name="VT_HELPSTYLESHEET['add']" value="/comma/help.css"/>
        <property name="VT_DOCBOOKSTYLESHEET['add']" value="/comma/webapp/comma/docbook.css"/>
        <!--header image -->
        <property name="VT_HDR_IMAGE_URL" value="/images/comma_logo.png"/>
        <!--template location-->
        <property name="VT_HDR_TMPLT_LOC" value="component://comma/template/Header.ftl"/>
        <property name="VT_FTR_TMPLT_LOC" value="component://comma/template/Footer.ftl"/>
        <property name="VT_NAV_OPEN_TMPLT" value="component://comma/template/AppBarOpen.ftl"/>
        <property name="VT_NAV_CLOSE_TMPLT" value="component://comma/template/AppBarClose.ftl"/>
        <property name="VT_MSG_TMPLT_LOC" value="component://comma/template/Messages.ftl"/>
        <property name="VT_LOGIN_TMPLT_LOC" value="component://comma/template/Login.ftl"/>

    </theme-properties>
</theme>